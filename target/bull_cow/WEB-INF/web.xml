<?xml version="1.0" encoding="UTF-8"?>

<web-app>
  <display-name>Archetype Created Web Application</display-name>

  <error-page>
    <error-code>404</error-code>
    <location>/404.jsp</location>
  </error-page>

  <error-page>
    <exception-type>java.lang.Throwable</exception-type>
    <location>/Exception.jsp</location>
  </error-page>

  <servlet>
    <servlet-name>authorization</servlet-name>
    <servlet-class>AuthorizationServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>authorization</servlet-name>
    <url-pattern>/auth</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>game</servlet-name>
    <servlet-class>GameServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>game</servlet-name>
    <url-pattern>/game</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>reset</servlet-name>
    <servlet-class>ResetGameServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>reset</servlet-name>
    <url-pattern>/reset</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>rating</servlet-name>
    <servlet-class>RatingServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>rating</servlet-name>
    <url-pattern>/rating</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>user</servlet-name>
    <servlet-class>UserServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>user</servlet-name>
    <url-pattern>/user</url-pattern>
  </servlet-mapping>

</web-app>
